generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id         String   @id @default(cuid())
  filename   String
  mimetype   String
  size       Int
  url        String // Public or internal URL to access the file
  uploadedAt DateTime @default(now())
}
